[core]
editor = vim
pager = less -S -R

[color]
ui = True

[log]
decorate = True

[alias]
ln = log --graph --pretty=format:'%C(auto)%h %d %s %C(ul white)-%an'
ln2 = log --graph --pretty=format:'%C(auto)%H%d%n%ad (%ar)%n%s%n%C(ul white)-%an%n'
pick = cherry-pick
shows = show --stat -p

[diff]
tool = vimdiff
wsErrorHighlight = all

[push]
default = simple
